<%- include('includes/head') %>
<%- include('includes/nav') %>

  <div class="container">
    <div class="row">
     <div class="col-lg-2"></div>

     <div class="col-lg-8 my-3">
       <h1 class="text-center  my-3">Criar conta ou Entrar</h1>
        <p class="text-center lead">Faça login ou crie sua conta.</p>

        <%- include('includes/messages'); %>

        <div class="row">
          <div class="col-lg my-3">
            <h4>Faça seu cadastro</h4>
            <p>Se ainda não possui conta, faça o cadastro abaixo.</p>

            <form class="form-cadastro" action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="mb-3">
                <label>senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Criar conta</button>
            </form>

          </div>
          <div class="col-lg my-3">
            <h4>Login</h4>
            <p>Se você ja é cadastrado, faça o login.</p>
            <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="mb-3">
                <label>senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
          </div>
        </div>
     </div>
     
     <div class="col-lg-2"></div>

    </div>
  </div>

<%- include('includes/footer') %>